<h2 class="page-header">New post <small><%= link_to 'view posts', posts_path %></small></h2>

<% if @post.errors.any? %>
  <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_for @post do |f| %>
  <div class="form-group">
    <%= f.label :title %><br />
    <%= f.text_field :title, autofocus: true, placeholder: 'Enter a title'  %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: 50, rows: 10, placeholder: 'Enter the content for your post' %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>
